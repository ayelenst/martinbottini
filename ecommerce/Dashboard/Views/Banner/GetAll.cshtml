@model List<Dashboard.Models.BannerViewModel>
@using GridMvc.Html

@{
    ViewBag.Title = "GetAll";
}


<input type="button" class="btn btn-primary pull-right" style="margin-right:0px" value="Nuevo" onclick="location.href='@Url.Action("Add", "Banner")'" />

@Html.Grid(Model).Columns(columns =>
{
columns.Add(foo => foo.Id).Sortable(true);
columns.Add(foo => foo.ImageUrl).Sortable(true).Filterable(true);
columns.Add(foo => foo.Title).Sortable(true).Filterable(true);
columns.Add(foo => foo.Description).Sortable(true);
columns.Add(foo => foo.Url).Sortable(true);
columns.Add().Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => @<input type="button" class='btn-default' value="Edit" onclick="location.href='@Url.Action("Edit", "Banner", new { id = o.Id })'" />);
    columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => @<input type="button" class='btn-default' value="Delete" onclick="location.href='@Url.Action("Delete", "Banner", new { id = o.Id })'" />);
}).WithPaging(20)

