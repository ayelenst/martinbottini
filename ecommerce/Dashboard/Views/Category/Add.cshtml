@model Dashboard.Models.CategoryViewModel

@{
    ViewBag.Title = "ADD";
}

<!DOCTYPE html>

@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div>
        <p>ID</p>
        @Html.DisplayFor(x => x.Id)
    </div>
    <div>
        <p>Nombre</p>
        @Html.EditorFor(x => x.Name)
    </div>
    <div>
        <p>Descripción</p>
        @Html.EditorFor(x => x.Description)
    </div>
    <div>
        <p>Nivel</p>
        @Html.EditorFor(x => x.Level)
    </div>
    <div>
        <p>ID Padre</p>
        @Html.EditorFor(x => x.ParentId)
    </div>
    <div>
        <p>Habilitado</p>
        @Html.EditorFor(x => x.Enabled)
    </div>
    <input type="submit" value="Submit" />

    <input type="button" value="Cancelar" onclick="location.href='@Url.Action("GetAll", "Category")'" />
}