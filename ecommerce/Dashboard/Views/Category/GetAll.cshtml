
@model List<Dashboard.Models.Category>
@using GridMvc.Html

@{
    ViewBag.Title = "Category by id";
}


<input type="button" value="Nuevo" onclick="location.href='@Url.Action("Add", "Category")'"/>

@Html.Grid(Model).Columns(columns =>
{
columns.Add(foo => foo.Id).Sortable(true);
columns.Add(foo => foo.Name).Sortable(true).Filterable(true);
columns.Add(foo => foo.Level).Sortable(true);
columns.Add(foo => foo.ParentId).Sortable(true);
columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => @<input type="button" value="Edit" onclick="location.href='@Url.Action("Edit", "Category", new { id = o.Id })'" />);
    columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => @<input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Category", new { id = o.Id })'" />);
}).WithPaging(20)