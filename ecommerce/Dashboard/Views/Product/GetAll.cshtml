@model List<Dashboard.Models.ProductViewModel>
@using GridMvc.Html

@{
    ViewBag.Title = "Producto por ID";
}

<input type="button"  class="btn btn-primary pull-right"  style="margin-right:0px" value="Nuevo" onclick="location.href='@Url.Action("Add", "Product")'" />

@Html.Grid(Model).Columns(columns =>
{
columns.Add(foo => foo.Id).Sortable(true);
columns.Add(foo => foo.Name).Sortable(true).Filterable(true);
columns.Add(foo => foo.Description).Sortable(true).Filterable(true);
columns.Add(foo => foo.IsOffer).Sortable(true);
columns.Add(foo => foo.Percent).Sortable(true);
columns.Add(foo => foo.Enabled).Sortable(true);
columns.Add(foo => foo.StartDay).Sortable(true);
columns.Add(foo => foo.EndDay).Sortable(true);
columns.Add(foo => foo.Price).Sortable(true);
columns.Add().Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => @<input type="button" class='btn-default' value="Editar" onclick="location.href='@Url.Action("Edit", "Product", new { id = o.Id })'" />);
    columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => @<input type="button" class='btn-default' data-toggle="modal" data-target="#modal-delete"  value="Eliminar" data-href="location.href='@Url.Action("Delete", "Product", new { id = o.Id })'" />);
}).WithPaging(20)

