@model List<WebApplication.Areas.Dashboard.Models.CategoryViewModel>
@using GridMvc.Html

@{
    ViewBag.Title = "Categorías por ID";
    Layout = "~/Areas/Dashboard/Views/Shared/_layout.cshtml";
}


<input type="button"  class="btn btn-primary pull-right"  style="margin-right:0px" value="Nuevo" onclick="location.href='@Url.Action("Add", "Category")'"/>

@Html.Grid(Model).Columns(columns =>
{
columns.Add(foo => foo.Id).Sortable(true);
columns.Add(foo => foo.Name).Sortable(true).Filterable(true);
columns.Add(foo => foo.Description).Sortable(true).Filterable(true);
columns.Add(foo => foo.Level).Sortable(true);
columns.Add(foo => foo.ParentId).Sortable(true);
columns.Add(foo => foo.Enabled).Sortable(true);
columns.Add().Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => @<input type="button" class='btn-default' value="Editar" onclick="location.href='@Url.Action("Edit", "Category", new { id = o.Id })'" />);
    columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => @<input type="button" class='btn-default' data-toggle="modal" data-target="#modal-delete"  value="Eliminar" data-href="location.href='@Url.Action("Eliminar", "Category", new { id = o.Id })'" />);
}).WithPaging(20)

