@model List<WebApplication.Areas.Dashboard.Models.ProductViewModel>
@using GridMvc.Html

@{
    ViewBag.Title = "Producto por ID";
    Layout = "~/Areas/Dashboard/Views/Shared/_layout.cshtml";
}

<input type="button"  class="btn btn-primary pull-right"  style="margin-right:0px" value="Nuevo" onclick="location.href='@Url.Action("Add", "Product")'" />

@Html.Grid(Model).Columns(columns =>
{
columns.Add(foo => foo.Id).Sortable(true).Titled("Id");
columns.Add(foo => foo.Name).Sortable(true).Filterable(true).Titled("Nombre");
columns.Add(foo => foo.Description).Sortable(true).Filterable(true).Titled("Descripción");
columns.Add(foo => foo.IsOffer).Sortable(true).Titled("Oferta");
columns.Add(foo => foo.Percent).Sortable(true).Titled("Porcentaje");
columns.Add(foo => foo.Enabled).Sortable(true).Titled("Habilitado");
columns.Add(foo => foo.StartDay).Sortable(true).Titled("Fecha Desde");
columns.Add(foo => foo.EndDay).Sortable(true).Titled("Fecha Hasta");
columns.Add(foo => foo.Price).Sortable(true).Titled("Precio");
columns.Add().Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => @<input type="button" class='btn-default' value="Editar" onclick="location.href='@Url.Action("Edit", "Product", new { id = o.Id })'" />);
    columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => @<input type="button" class='btn-default' data-toggle="modal" data-target="#modal-delete"  value="Eliminar" data-href="location.href='@Url.Action("Delete", "Product", new { id = o.Id })'" />);
}).WithPaging(20)

<input type="button" class="btn btn-primary pull-right" style="margin-right:0px" value="Nuevo" onclick="location.href='@Url.Action("Add", "Product")'" />